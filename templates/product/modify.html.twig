{% block body %}
	<div class="container mt-3 mb-3">
		{% for value in dataproductforrender %}
			<div class="row" id="product{{value.idproduct}}">
				<div class="col-xl-1 col-lg-1 col-sm-2">
					<input class="cienxcienmodify form-control hidden-xs" name="idproductmodify" type="number" value="{{value.idproduct}}" readonly>
				</div>
				<div class="col-xl-5 col-lg-5 col-sm-10">
					<input name="titulo" type="text" class="cienxcienmodify form-control" value="{{value.titulo}}" readonly>
				</div>
				<div class="col-xl-2 col-lg-2 col-sm-3">
					<button data-idproduct="{{value.idproduct}}" type="button" class="btn btn-primary botonimagenes cienxcienmodify" data-toggle="modal" data-target="#ModalScrollable">
						Imagenes
					</button>
				</div>
				<div class="col-xl-2 col-lg-2 col-sm-3">
					<a class="btn btn-success cienxcienmodify" href={{ path("updateProduct", {id: value.idproduct} ) }}>
						Actualizar
					</a>
				</div>
				<div class="col-xl-2 col-lg-2 col-sm-3">
					<button data-idproduct="{{value.idproduct}}" type="button" class="btn btn-danger deleteproduct cienxcienmodify mb-3" data-toggle="modal" data-target="#ModalScrollable">
						Borrar
					</button>
				</div>
			</div>
		{% endfor %}
